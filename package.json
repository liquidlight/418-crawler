{
  "name": "site-crawler",
  "version": "0.1.0",
  "type": "module",
  "main": "src/electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 --timeout 30000 && electron .\"",
    "dev:web": "vite",
    "build": "vite build && electron-builder --mac dmg",
    "build:web": "vite build"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "org.sitecrawler.app",
    "productName": "Site Crawler",
    "copyright": "Copyright Â© 2024 Site Crawler",
    "files": [
      "src/electron/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets/icons",
      "output": "dist-electron"
    },
    "extraResources": [
      "proxy-server/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": false,
      "entitlements": "src/electron/entitlements.mac.plist",
      "entitlementsInherit": "src/electron/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "title": "Site Crawler Installer",
      "window": {
        "width": 540,
        "height": 320
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/icon.png"
    }
  }
}
