{
  "name": "site-crawler",
  "version": "0.1.0",
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "proxy": "node proxy-server/server.js",
    "start": "concurrently \"npm run proxy\" \"npm run dev\"",
    "build:prod": "vite build && npm run package",
    "package": "node scripts/package.js",
    "start:prod": "node proxy-server/server.js & vite preview",
    "electron-dev": "concurrently \"npm run build -- --watch\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "vite build && electron-builder",
    "electron-dist": "npm run build && npm run electron-build"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "org.sitecrawler.app",
    "productName": "Site Crawler",
    "files": [
      "dist/**/*",
      "electron-main.js",
      "proxy-server/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets/icons"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/icon.png"
    }
  }
}
